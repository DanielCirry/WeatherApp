@model WeatherModel
@{
    ViewData["Title"] = "Home Page";
}

@* Bootsrap has enough classes for this small solution hence why the minimal amount of CSS in favour of Bootsrap classes *@
<div class="pb-3 text-center">
    <h1 class="display-4">Weather App</h1>
</div>
<div class="container d-flex justify-content-center align-items-center pb-3 col col-lg-3">
    <form id="get-weather" method="get" action="@Url.Action("GetWeather", "Home")">
        <div class="input-group">
            <input type="text" id="location" placeholder="Insert Location...">
            <input type="button" value="Search" id="search" class="btn btn-primary">
        </div>
    </form>
</div>
<div class="container d-flex justify-content-center align-items-center pb-3 col col-lg-3">
    <input type="button" value="Clean Records" id="clean" class="btn btn-secondary">
</div>
<div class="container d-flex justify-content-center col col-lg-12">
    <div id="weather" class="col col-lg-12">
        @{
            await Html.RenderPartialAsync("Partial/_GetWeatherPartial");
        }
    </div>
</div>